<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <% if (pantry.length > 0) { %>
      <ul>
        <% pantry.forEach(food => { %>
          <li>
            <%= food.name %>
            <a href="/users/<%= user._id %>/foods/<%= food._id %>" class="button">View</a>
            <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
            <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>There are no items in this pantry.</p>
    <% } %>
    <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
  </body>
</html>